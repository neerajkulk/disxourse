<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title><%= `${myData.user.username} - comments` %> </title>
    <link href="/css/dashboard.css" rel="stylesheet" />
    <%- include('partials/head') %>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('partials/user-sidebar',{user:myData.user}) %>
        <!-- End of Sidebar -->


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="shadow">
                        <%- include('partials/navbar',{user:myData.user,unread:myData.unread}) %>
                    </div>
                </div>
                <div class="my-5"></div>
                <div class="container my-5 text-center">
                    <h1 class="display-4">Recent comments </h1>
                </div>
                <!-- /.container-fluid -->

                <!-- End of Main Content -->

                <div class="container">
                    <% if (myData.commentData.length == 0) {%>
                    <h4>No comments found</h4>
                    <% } %>

                    <% for(let i=0; i < myData.commentData.length; i++) { %>
                    <!-- display all papers with comments -->
                    <div class="my-5">
                        <h3 class="mb-3">
                            <a href=<%=  `${myData.commentData[i].paper.url}#comment-form` %>> <%= myData.commentData[i].paper.title %>
                            </a>
                        </h3>

                        <% for(let j=0; j < myData.commentData[i].comments.length; j++) { %>
                        <!-- display all comments on a given paper -->

                        <div class="card my-3">
                            <div class="card-header my-auto">
                                <p class="comment-date float-right text-muted">
                                    <%= myData.commentData[i].comments[j].date %>
                                </p>
                                <h5 class="lead mr-1"><%= myData.user.username%></h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><%= myData.commentData[i].comments[j].commentBody %></p>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    <% } %>
                </div>
                <%- include('partials/formatClientDate.ejs') %>
            </div>
            <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fa fa-angle-up"></i>
        </a>

        <%- include('partials/bottomScripts') %>
        <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

</body>

</html>